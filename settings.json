{
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "(sleep 10 && afplay /System/Library/Sounds/Ping.aiff && curl -s -d 'ðŸ” Claude needs permission to continue' ntfy.sh/lodz-claude-x7k9m2 >/dev/null) & echo $! > ~/.claude/.notify_pid"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "(sleep 10 && afplay /System/Library/Sounds/Glass.aiff) & echo $! > ~/.claude/.idle_pid"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "kill $(cat ~/.claude/.notify_pid 2>/dev/null) 2>/dev/null; rm -f ~/.claude/.notify_pid; exit 0"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "kill $(cat ~/.claude/.idle_pid 2>/dev/null) 2>/dev/null; rm -f ~/.claude/.idle_pid; kill $(cat ~/.claude/.notify_pid 2>/dev/null) 2>/dev/null; rm -f ~/.claude/.notify_pid; exit 0"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "expo-app-design@expo-plugins": true
  },
  "permissions": {
    "defaultMode": "plan"
  },
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "spinnerVerbs": {
    "mode": "replace",
    "verbs": [
      "connect the dots",
      "stay hungry, stay foolish",
      "think different",
      "simplify",
      "one more thing",
      "make a dent in the universe",
      "design is how it works",
      "focus and simplify",
      "the journey is the reward",
      "be a pirate, not the navy",
      "real artists ship",
      "follow your curiosity",
      "say no to a thousand things",
      "innovate and distinguish",
      "sweat the details",
      "create insanely great things",
      "push the human race forward",
      "everything around you was made up",
      "follow your heart",
      "don't settle",
      "creativity is just connecting things",
      "know what people want",
      "start small, think big",
      "quality over quantity"
    ]
  }
}
