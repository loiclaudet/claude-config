{
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "(sleep 10 && afplay /System/Library/Sounds/Ping.aiff && curl -s -d 'ðŸ” Claude needs permission to continue' ntfy.sh/lodz-claude-x7k9m2 >/dev/null) & echo $! > ~/.claude/.notify_pid"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "(sleep 10 && afplay /System/Library/Sounds/Glass.aiff) & echo $! > ~/.claude/.idle_pid"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "kill $(cat ~/.claude/.notify_pid 2>/dev/null) 2>/dev/null; rm -f ~/.claude/.notify_pid; exit 0"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "filepath=$(cat - | jq -r '.tool_input.file_path // empty'); case \"$filepath\" in *.js|*.jsx|*.ts|*.tsx|*.css|*.html) cd \"$(dirname \"$filepath\")\" && npx prettier --write \"$filepath\" 2>/dev/null; npx eslint --fix \"$filepath\" 2>/dev/null; exit 0 ;; *) exit 0 ;; esac"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "kill $(cat ~/.claude/.idle_pid 2>/dev/null) 2>/dev/null; rm -f ~/.claude/.idle_pid; kill $(cat ~/.claude/.notify_pid 2>/dev/null) 2>/dev/null; rm -f ~/.claude/.notify_pid; exit 0"
          }
        ]
      }
    ]
  }
}
